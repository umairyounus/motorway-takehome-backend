{
  "compilerOptions": {
    "composite": false,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": ["node", "jest"],
    "rootDir": "./",
    "typeRoots": [
      "./node_modules/@types",
      "@types"
    ],
    "outDir": "dist"
  },
  "include": ["src/**/*.ts","@types", "**/*.test.ts"],
  "exclude": [
    "node_modules",
  ],
  "ts-node": {  "files": true },
}